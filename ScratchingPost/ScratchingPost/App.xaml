<?xml version="1.0" encoding="utf-8"?>

<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ScratchingPost.App">
  <Application.Resources>
    <ResourceDictionary>
      <Color x:Key="TextColour">#FFFFFF</Color>
      <Color x:Key="TextBoxColour">#000000</Color>
      <Color x:Key="ErrorTextColour">#FF0000</Color>
      <Color x:Key="ToolbarBackgroundColour">#494949</Color>
      <Color x:Key="ButtonBackgroundColour">#00b08b</Color>

      <Style TargetType="NavigationPage">
        <Setter Property="BarTextColor" Value="{x:DynamicResource TextColour}" />
        <Setter Property="BarBackgroundColor" Value="{x:DynamicResource ToolbarBackgroundColour}" />
      </Style>

      <Style TargetType="Button" x:Key="FlatButton">
        <Setter Property="BackgroundColor" Value="{x:DynamicResource ButtonBackgroundColour}" />
        <Setter Property="TextColor" Value="{x:DynamicResource TextColour}" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="HorizontalOptions" Value="FillAndExpand" />
      </Style>

    </ResourceDictionary>
  </Application.Resources>
</Application>